{{#if errors.length}}
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <ul class="mb-0">
            {{#each errors}}
                <li>{{text}}</li>
            {{/each}}
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

<h3 class="mb-3">Editar Postagem</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <form action="/admin/postagens/update" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <div class="form-group">
                <label for="titulo">Título</label>
                <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">
            </div>

            <div class="form-group">
                <label for="slug">Slug</label>
                <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">
            </div>

            <div class="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            </div>

            <div class="form-group">
                <label for="conteudo">Conteúdo</label>
                <textarea name="conteudo" class="form-control">{{postagem.conteudo}}</textarea>
            </div>

            <div class="form-group">
                <label for="categoria">Categoria</label>
                <select name="categoria" class="form-control">
                    {{#each categorias}}
                        <option value="{{_id}}" {{#if (eq ../postagem.categoria._id _id)}}selected{{/if}}>{{nome}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-success mt-3">Atualizar Postagem</button>
            <a href="/admin/postagens" class="btn btn-warning mt-3">Cancelar</a>
        </form>
    </div>
</div>



